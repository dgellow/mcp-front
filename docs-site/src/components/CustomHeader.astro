---
import Default from '@astrojs/starlight/components/Header.astro';
---

<Default {...Astro.props}>
  <div class="header-nav" slot="after-logo">
    <nav aria-label="Main navigation">
      <a href="/mcp-front/getting-started/" class="nav-link">Getting Started</a>
      <a href="/mcp-front/config/overview/" class="nav-link">Configuration</a>
      <a href="/mcp-front/deployment/docker/" class="nav-link">Deployment</a>
      <a href="/mcp-front/api/endpoints/" class="nav-link">API</a>
    </nav>
  </div>
</Default>

<style>
  .header-nav {
    margin-left: auto;
    margin-right: 1rem;
  }

  .header-nav nav {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-link {
    color: #888888;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: #E5E5E5;
  }

  /* Hide on mobile */
  @media (max-width: 768px) {
    .header-nav {
      display: none;
    }
  }
</style>